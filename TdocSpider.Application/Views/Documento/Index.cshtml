@model TdocSpider.Application.Models.ViewModels.DocumentoViewModel

@{
    ViewData["Title"] = "Registrar Documento";
}



<div class="container">

    <h2>Registrar Documento</h2>

    <form asp-action="CriaDocumento" enctype="multipart/form-data" method="post" asp-controller="Documento">
        <div class="form-group">
            <label asp-for="Titulo" class="control-label">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="control-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Arquivo" class="control-label">Arquivo</label>
            <input asp-for="Arquivo" type="file" class="form-control" />
            <span asp-validation-for="Arquivo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NomeArquivo" class="control-label">Nome do Arquivo</label>
            <input asp-for="NomeArquivo" class="form-control" />
            <span asp-validation-for="NomeArquivo" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="ListDocumentos" class="btn btn-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>  
   
    </form>

</div>
